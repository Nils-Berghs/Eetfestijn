<Page x:Class="be.berghs.nils.EetFestijnWPF.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:be.berghs.nils.EetFestijnWPF.Pages"
      xmlns:lib="clr-namespace:be.berghs.nils.EetFestijnLib.viewModels;assembly=EetFestijnLib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type=lib:OrderViewModel}"
      Title="OrderPage">

    <Page.Resources>
        <DataTemplate x:Key="MyItemTemplate" DataType="{x:Type lib:OrderItemViewModel}">
            <Grid HorizontalAlignment="Stretch" x:Name="ItemRow">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="NameBlock" Text="{Binding Name}" Margin="3,0,3,0" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBox x:Name="AantalBlock" Text="{Binding Count}" HorizontalAlignment="Stretch" Margin="3,0,3,0" Grid.Column="1"/>
                <TextBlock x:Name="PriceBlock" Text="{Binding Price, StringFormat={}{0} €}" Margin="3,0,3,0" TextAlignment="Right" VerticalAlignment="Center" Grid.Column="2"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat={}{0} €}" Margin="3,0,3,0" TextAlignment="Right" VerticalAlignment="Center" Grid.Column="3"/>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsFocused, ElementName=AantalBlock}" Value="True">
                    <Setter TargetName="NameBlock" Property="Foreground" Value="red"/>
                    <Setter TargetName="NameBlock" Property="FontWeight" Value="bold"/>
                    <!--<Setter TargetName="AantalBlock" Property="Text" Value=""/>-->
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <Style x:Key="MyItemStyle">
            <Setter Property="FrameworkElement.HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FrameworkElement.Margin" Value="5"/>
        </Style>

    </Page.Resources>

    <Grid Grid.IsSharedSizeScope="True" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto" SharedSizeGroup="buttonColumn"/>
            <ColumnDefinition Width="auto" SharedSizeGroup="buttonColumn"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- The grid with the food items-->
        <Grid Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3" BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="0" Grid.RowSpan="1">
                <ItemsControl Margin="10" IsTabStop="False" x:Name="CurrentOrderFoodControl" ItemsSource="{Binding Foods}"  ItemTemplate="{StaticResource MyItemTemplate}" ItemContainerStyle="{StaticResource MyItemStyle}"/>
            </Border>
            <Border  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3" BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1">
                <ItemsControl Margin="10" IsTabStop="False" x:Name="CurrentOrderDessertControl" ItemsSource="{Binding Desserts}" ItemTemplate="{StaticResource MyItemTemplate}" ItemContainerStyle="{StaticResource MyItemStyle}"/>
            </Border>
            <Border  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3" BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                <ItemsControl Margin="10" IsTabStop="False" x:Name="CurrentOrderDrinksControl" ItemsSource="{Binding Beverages}" ItemTemplate="{StaticResource MyItemTemplate}" ItemContainerStyle="{StaticResource MyItemStyle}"/>
            </Border>

        </Grid>

        <TextBlock Text="{Binding TotalPrice, StringFormat={}Totaal: {0} €}" Grid.Row="1"/>

        <Button Grid.Row="1" Grid.Column="1" Content="OK" Command="{Binding }"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Annuleren"/>
    </Grid>
</Page>
