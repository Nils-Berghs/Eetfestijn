<Page x:Class="be.berghs.nils.EetFestijnWPF.Pages.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:be.berghs.nils.EetFestijnWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentPage">

    <Grid Margin="10"> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Totaal:"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding }"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Aantal waardebonnen:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding }"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Te betalen:"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding }"/>
    </Grid>
</Page>
