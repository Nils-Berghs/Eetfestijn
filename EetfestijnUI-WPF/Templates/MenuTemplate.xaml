<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:be.berghs.nils.EetFestijnLib.ViewModels;assembly=EetFestijnLib" 
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="TextBlock" x:Key="VerticalCenteredDataGridTextColumnStyle" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="TextBox" x:Key="VerticalCenteredDataGridTextColumnEditingStyle" BasedOn="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="Button" x:Key="SmallDataGridButton" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Padding" Value="2,0"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    <Style TargetType="DataGridCell" x:Key="SmallDataGridButtonCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <DataTemplate DataType="{x:Type viewmodels:MenuViewModel}">

        
        
        <Grid  Margin="10" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.ColumnSpan="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Grid.Column="0" Header="Eten" Margin="10">
                    <DataGrid ItemsSource="{Binding Foods}" CanUserAddRows="True" CanUserDeleteRows="True" AutoGenerateColumns="False" SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="auto" CellStyle="{StaticResource SmallDataGridButtonCell}"  >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{materialDesign:PackIcon ArrowDown}" Style="{StaticResource SmallDataGridButton}" CommandParameter="{Binding DataContext}"
                                                    Command="{Binding Path=DataContext.MoveItemDownCommand, RelativeSource= {RelativeSource FindAncestor,AncestorType={x:Type DataGrid}}}" />
                                            <Button Content="{materialDesign:PackIcon ArrowUp}" Style="{StaticResource SmallDataGridButton}"  />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Naam"  Width="5*" Binding="{Binding Name}" 
                                                ElementStyle="{StaticResource VerticalCenteredDataGridTextColumnStyle}"
                                                EditingElementStyle="{StaticResource VerticalCenteredDataGridTextColumnEditingStyle}"/>
                            <DataGridTextColumn Header="Prijs" Width="*" Binding="{Binding Price, Mode=TwoWay}" 
                                                ElementStyle="{StaticResource VerticalCenteredDataGridTextColumnStyle}"
                                                EditingElementStyle="{StaticResource VerticalCenteredDataGridTextColumnEditingStyle}"/>
                            <DataGridTemplateColumn Width="auto" CellStyle="{StaticResource SmallDataGridButtonCell}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{materialDesign:PackIcon Delete}" Style="{StaticResource SmallDataGridButton}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox  Grid.Row="1" Grid.Column="0" Header="Dessert" Margin="10">
                    <DataGrid ItemsSource="{Binding Desserts}" CanUserAddRows="True" CanUserDeleteRows="True" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="auto" CellStyle="{StaticResource SmallDataGridButtonCell}"  >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{materialDesign:PackIcon ArrowDown}" Style="{StaticResource SmallDataGridButton}" />
                                            <Button Content="{materialDesign:PackIcon ArrowUp}" Style="{StaticResource SmallDataGridButton}"  />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Naam"  Width="5*" Binding="{Binding Name}" 
                                                ElementStyle="{StaticResource VerticalCenteredDataGridTextColumnStyle}"
                                                EditingElementStyle="{StaticResource VerticalCenteredDataGridTextColumnEditingStyle}"/>
                            <DataGridTextColumn Header="Prijs" Width="*" Binding="{Binding Price, Mode=TwoWay}" 
                                                ElementStyle="{StaticResource VerticalCenteredDataGridTextColumnStyle}"
                                                EditingElementStyle="{StaticResource VerticalCenteredDataGridTextColumnEditingStyle}"/>
                            <DataGridTemplateColumn Width="auto" CellStyle="{StaticResource SmallDataGridButtonCell}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{materialDesign:PackIcon Delete}" Style="{StaticResource SmallDataGridButton}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox Grid.RowSpan="2" Grid.Column="1" Header="Drank" Margin="10">
                    <DataGrid ItemsSource="{Binding Beverages}" CanUserAddRows="True" CanUserDeleteRows="True" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="auto" CellStyle="{StaticResource SmallDataGridButtonCell}"  >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{materialDesign:PackIcon ArrowDown}" Style="{StaticResource SmallDataGridButton}" />
                                            <Button Content="{materialDesign:PackIcon ArrowUp}" Style="{StaticResource SmallDataGridButton}"  />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Naam"  Width="5*" Binding="{Binding Name}" 
                                                ElementStyle="{StaticResource VerticalCenteredDataGridTextColumnStyle}"
                                                EditingElementStyle="{StaticResource VerticalCenteredDataGridTextColumnEditingStyle}"/>
                            <DataGridTextColumn Header="Prijs" Width="*" Binding="{Binding Price, Mode=TwoWay}" 
                                                ElementStyle="{StaticResource VerticalCenteredDataGridTextColumnStyle}"
                                                EditingElementStyle="{StaticResource VerticalCenteredDataGridTextColumnEditingStyle}"/>
                            <DataGridTemplateColumn Width="auto" CellStyle="{StaticResource SmallDataGridButtonCell}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{materialDesign:PackIcon Delete}" Style="{StaticResource SmallDataGridButton}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>

            <Button Grid.Column="1" Grid.Row="1" Content="Start" Command="{Binding OkCommand}" x:Name="btnOk"/>
            <Button Grid.Column="2" Grid.Row="1" Content="Annuleer" Command="{Binding CancelCommand}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>