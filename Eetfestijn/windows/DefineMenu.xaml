<Window x:Class="be.berghs.nils.eetfestijn.windows.DefineMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:be.berghs.nils.eetfestijn.windows"
        mc:Ignorable="d"
        Title="Bepaal menu" Height="750" Width="450" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ProductsGrid" Grid.Row="0" CanUserAddRows="True" HeadersVisibility="None"></DataGrid>
        <Button Content="OK" Grid.Row="1" Height="35" Width="150" HorizontalAlignment="Right" Click="Button_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>
