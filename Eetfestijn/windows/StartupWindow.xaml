<Window x:Class="be.berghs.nils.eetfestijn.windows.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:be.berghs.nils.eetfestijn.windows"
        mc:Ignorable="d"
        WindowStyle="None" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Start nieuwe sessie" Click="NewSessie_Click" Margin="5" Height="50" Width="300"/>
        <Button Content="Ga verder met sessie" Click="ContinueSessie_Click" Grid.Row="1" Margin="5" Height="50" Width="300"/>
        <Button Content="Afsluiten" Click="Exit_Click" Grid.Row="2" Margin="5" Height="50" Width="300"/>
    </Grid>
</Window>
