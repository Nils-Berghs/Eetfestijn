<Window x:Class="be.berghs.nils.eetfestijn.windows.ConsumptionOverview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConsumptionOverview" Height="300" Width="300">
    <Grid>
        <DataGrid AutoGenerateColumns="false" AlternatingRowBackground="#f0f0f0" Name="Consumption" VerticalAlignment="Stretch" RowHeaderWidth="20" HeadersVisibility="Column" FontSize="12" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Width="3*" Binding="{Binding ProductName}" />
                <DataGridTextColumn Header="Aantal" ElementStyle="{StaticResource CellRightAlign}" Width="*" Binding="{Binding Aantal}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
